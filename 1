          <table className="min-w-[900px] w-full text-left text-sm">
            <thead className="bg-neutral-50">
              <tr>
                <th className="p-4 font-medium">–ö—É—Ä—Å</th>
                <th className="p-4">–í–≤–æ–¥–Ω—ã–π</th>
                <th className="p-4">–ë–∞–∑–∞</th>
                <th className="p-4">–°—Ü–µ–ø–ª–µ–Ω–∏–µ</th>
                <th className="p-4">–í–µ—Å</th>
                <th className="p-4">–ö–æ–Ω—Ç—Ä—Ä—É–ª–µ–Ω–∏–µ</th>
                <th className="p-4">–¢–æ—Ä–º–æ–∂–µ–Ω–∏–µ</th>
                <th className="p-4">–ö–æ–Ω—Ç—Ä–∞–≤–∞—Ä–∏–π–∫–∞</th>
              </tr>
            </thead>
            <tbody>
              {courses.map((c, i) => (
                <tr key={i} className="border-t border-neutral-100 hover:bg-neutral-50/60">
                  <td className="p-4 font-medium">{c.title}</td>
                  <td className="p-4 text-center">{c.sections.includes("–í–≤–æ–¥–Ω—ã–π —Ä–∞–∑–¥–µ–ª") ? "‚úÖ" : "‚Äî"}</td>
                  <td className="p-4 text-center">{c.sections.includes("–ë–∞–∑–æ–≤—ã–µ –Ω–∞–≤—ã–∫–∏") ? "‚úÖ" : "‚Äî"}</td>
                  <td className="p-4 text-center">{c.sections.find(s=>s.toLowerCase().includes("—Å—Ü–µ–ø–ª")) ? "‚úÖ" : "‚Äî"}</td>
                  <td className="p-4 text-center">{c.sections.find(s=>s.toLowerCase().includes("–≤–µ—Å")) ? "‚úÖ" : "‚Äî"}</td>
                  <td className="p-4 text-center">{c.sections.includes("–ö–æ–Ω—Ç—Ä—Ä—É–ª–µ–Ω–∏–µ") ? "‚úÖ" : "‚Äî"}</td>
                  <td className="p-4 text-center">{c.sections.find(s=>s.toLowerCase().includes("—Ç–æ—Ä–º–æ–∂")) ? "‚úÖ" : "‚Äî"}</td>
                  <td className="p-4 text-center">{c.anti ? "‚úÖ" : "‚Äî"}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>

        <div className="mt-6 grid md:grid-cols-3 gap-4">
          <a id="trial" className="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm" href="#cta">
            <h3 className="text-lg font-semibold">–ü—Ä–æ–±–Ω—ã–π —É—Ä–æ–∫ ¬∑ 60 –º–∏–Ω—É—Ç</h3>
            <p className="mt-2 text-neutral-700">–û—Ü–µ–Ω–∏—Ç–µ –ø–æ–¥—Ö–æ–¥ –∏–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–æ–≤ –∏ –º–µ—Ç–æ–¥–∏–∫—É. –ü—Ä–∏ –ø–æ–∫—É–ø–∫–µ –ø–æ–ª–Ω–æ–≥–æ –∫—É—Ä—Å–∞ ‚Äî –±–µ—Å–ø–ª–∞—Ç–Ω–æ.</p>
          </a>
          <div className="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm">
            <h3 className="text-lg font-semibold">–†–∞—Å—Å—Ä–æ—á–∫–∞</h3>
            <p className="mt-2 text-neutral-700">–ë—ã—Å—Ç—Ä–æ–µ –æ—Ñ–æ—Ä–º–ª–µ–Ω–∏–µ –Ω–∞ –º–µ—Å—Ç–µ: –¢–∏–Ω—å–∫–æ—Ñ—Ñ, –°–±–µ—Ä, –ü–æ—á—Ç–∞ –ë–∞–Ω–∫. –û–ø–ª–∞—Ç–∞ —á–µ—Ä–µ–∑ Robokassa, –°–ø–ª–∏—Ç, –î–æ–ª—è–º–∏.</p>
          </div>
          <div className="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm">
            <h3 className="text-lg font-semibold">–°–≤—è–∑—å</h3>
            <p className="mt-2 text-neutral-700">–ù–∞–ø–∏—à–∏—Ç–µ –Ω–∞–º –≤ –º–µ—Å—Å–µ–Ω–¥–∂–µ—Ä ‚Äî –æ—Ç–≤–µ—Ç–∏–º –Ω–∞ –ª—é–±—ã–µ –≤–æ–ø—Ä–æ—Å—ã.</p>
            <div className="mt-3 flex gap-3">
              <a href={contacts.whatsapp} className="px-4 py-2 rounded-xl border border-neutral-200">WhatsApp</a>
              <a href={contacts.telegram} className="px-4 py-2 rounded-xl border border-neutral-200">Telegram</a>
            </div>
          </div>
        </div>
      </section>

      {/* –ú–æ—Ç–æ–ø–∞—Ä–∫ */}
      <section id="moto" className="mx-auto max-w-7xl px-4 py-12">
        <h2 className="text-2xl md:text-3xl font-bold">–ù–∞—à –º–æ—Ç–æ–ø–∞—Ä–∫</h2>
        <div className="mt-6 grid md:grid-cols-3 gap-6">
          {bikes.map((b, i) => (
            <article key={i} className="rounded-2xl border border-neutral-200 bg-white shadow-sm overflow-hidden">
              <div className="aspect-[4/3] bg-cover bg-center" style={{backgroundImage:`url(${b.img})`}} />
              <div className="p-5">
                <h3 className="text-lg font-semibold">{b.model}</h3>
                <p className="mt-1 text-neutral-700">{b.note}</p>
                <ul className="mt-2 flex flex-wrap gap-2 text-sm text-neutral-600">
                  {b.specs.map((s, idx)=>(<li key={idx} className="px-2 py-1 rounded-lg border border-neutral-200">{s}</li>))}
                </ul>
              </div>
            </article>
          ))}
        </div>
      </section>

      {/* –ü–ª–æ—â–∞–¥–∫–∏ */}
      <section id="locations" className="mx-auto max-w-7xl px-4 py-12">
        <h2 className="text-2xl md:text-3xl font-bold">–ù–∞—à–∏ –ø–ª–æ—â–∞–¥–∫–∏</h2>
        <div className="mt-6 grid md:grid-cols-2 gap-6">
          <div className="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm">
            <div className="text-sm text-neutral-600">–ë—É—Ö–∞—Ä–µ—Å—Ç—Å–∫–∞—è</div>
            <h3 className="text-lg font-semibold">–û—Ç–∫—Ä—ã—Ç–∞—è –ø–ª–æ—â–∞–¥–∫–∞</h3>
            <p className="mt-2 text-neutral-700">–¢—Ä–µ–Ω–∏—Ä–æ–≤–∫–∏ –≤ —Ç—ë–ø–ª—ã–π —Å–µ–∑–æ–Ω. –ü—Ä–æ—Å—Ç–æ—Ä–Ω–∞—è —Ä–∞–∑–º–µ—Ç–∫–∞ –¥–ª—è –≤—Å–µ—Ö —É–ø—Ä–∞–∂–Ω–µ–Ω–∏–π.</p>
          </div>
          <div className="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm">
            <div className="text-sm text-neutral-600">–î—ã–±–µ–Ω–∫–æ</div>
            <h3 className="text-lg font-semibold">–ö—Ä—ã—Ç–∞—è –ø–ª–æ—â–∞–¥–∫–∞</h3>
            <p className="mt-2 text-neutral-700">–†–∞–±–æ—Ç–∞–µ–º –∫—Ä—É–≥–ª—ã–π –≥–æ–¥. –ö–æ–º—Ñ–æ—Ä—Ç–Ω—ã–µ —É—Å–ª–æ–≤–∏—è –∑–∏–º–æ–π –∏ –≤ –Ω–µ–ø–æ–≥–æ–¥—É.</p>
          </div>
        </div>
      </section>

      {/* –ü—Ä–µ–ø–æ–¥–∞–≤–∞—Ç–µ–ª–∏ */}
      <section id="teachers" className="mx-auto max-w-7xl px-4 py-12">
        <h2 className="text-2xl md:text-3xl font-bold">–ù–∞—à–∏ –∏–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä—ã</h2>
        <div className="mt-6 grid md:grid-cols-3 gap-6">
          {teachers.map((t, i) => (
            <article key={i} className="rounded-2xl border border-neutral-200 bg-white shadow-sm overflow-hidden">
              <div className="aspect-[4/3] bg-cover bg-center" style={{backgroundImage:`url(${t.img})`}} />
              <div className="p-5">
                <h3 className="text-lg font-semibold">{t.name}</h3>
                <p className="mt-1 text-neutral-700">{t.desc}</p>
              </div>
            </article>
          ))}
        </div>
      </section>

      {/* FAQ */}
      <section id="faq" className="mx-auto max-w-7xl px-4 py-12">
        <h2 className="text-2xl md:text-3xl font-bold">–ß–∞—Å—Ç—ã–µ –≤–æ–ø—Ä–æ—Å—ã</h2>
        <div className="mt-6 grid md:grid-cols-2 gap-6">
          <details className="rounded-2xl border border-neutral-200 bg-white p-5">
            <summary className="font-medium cursor-pointer">–ú–æ–∂–Ω–æ –ª–∏ –Ω–∞—á–∞—Ç—å –±–µ–∑ –æ–ø—ã—Ç–∞?</summary>
            <p className="mt-3 text-neutral-700">–î–∞. –ö—É—Ä—Å ¬´–ù–æ–≤–∏—á–æ–∫ –≤ –≥–æ—Ä–æ–¥–µ¬ª (16 —á) ‚Äî –æ–ø—Ç–∏–º–∞–ª—å–Ω–∞—è —Å—Ç–∞—Ä—Ç–æ–≤–∞—è —Ç–æ—á–∫–∞: –≤—ã –æ—Å–≤–æ–∏—Ç–µ —Å—Ü–µ–ø–ª–µ–Ω–∏–µ –∏ –ø–µ—Ä–µ–Ω–æ—Å –≤–µ—Å–∞, –ø–ª—é—Å –ø–æ–¥–≥–æ—Ç–æ–≤–∏—Ç–µ—Å—å –∫ —ç–∫–∑–∞–º–µ–Ω—É.</p>
          </details>
          <details className="rounded-2xl border border-neutral-200 bg-white p-5">
            <summary className="font-medium cursor-pointer">–ö–∞–∫–∞—è —ç–∫–∏–ø–∏—Ä–æ–≤–∫–∞ –Ω—É–∂–Ω–∞?</summary>
            <p className="mt-3 text-neutral-700">–ú—ã –ø—Ä–µ–¥–æ—Å—Ç–∞–≤–ª—è–µ–º –Ω–µ–æ–±—Ö–æ–¥–∏–º—É—é —ç–∫–∏–ø–∏—Ä–æ–≤–∫—É. –ï—Å–ª–∏ –µ—Å—Ç—å —Å–≤–æ—è ‚Äî –±–µ—Ä–∏—Ç–µ, –∏–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –æ—Ü–µ–Ω–∏—Ç –∏ –ø–æ–¥—Å–∫–∞–∂–µ—Ç –ø–æ –ø–æ—Å–∞–¥–∫–µ.</p>
          </details>
          <details className="rounded-2xl border border-neutral-200 bg-white p-5">
            <summary className="font-medium cursor-pointer">–ö–∞–∫ –≤—ã–±—Ä–∞—Ç—å –∫—É—Ä—Å?</summary>
            <p className="mt-3 text-neutral-700">–ï—Å–ª–∏ —É–≤–µ—Ä–µ–Ω–Ω–æ –µ–∑–¥–∏–ª–∏ ‚Äî 12 —á–∞—Å–æ–≤. –ï—Å–ª–∏ –Ω—É–∂–µ–Ω —Ñ—É–Ω–¥–∞–º–µ–Ω—Ç ‚Äî 16 –∏–ª–∏ 20 —á–∞—Å–æ–≤. –î–ª—è –º–∞–∫—Å–∏–º—É–º–∞ –∏ –∫–æ–Ω—Ç—Ä–∞–≤–∞—Ä–∏–π–∫–∏ ‚Äî –∞–≤—Ç–æ—Ä—Å–∫–∞—è –ø—Ä–æ–≥—Ä–∞–º–º–∞ (26 —á–∞—Å–æ–≤).</p>
          </details>
          <details className="rounded-2xl border border-neutral-200 bg-white p-5">
            <summary className="font-medium cursor-pointer">–ì–¥–µ –ø—Ä–æ—Ö–æ–¥—è—Ç –∑–∞–Ω—è—Ç–∏—è?</summary>
            <p className="mt-3 text-neutral-700">–ù–∞ –∑–∞–∫—Ä—ã—Ç–æ–π –ø–ª–æ—â–∞–¥–∫–µ, –∫—Ä—É–≥–ª–æ–≥–æ–¥–∏—á–Ω–æ. –ó–∏–º–æ–π ‚Äî –Ω–∞ –∫—Ä—ã—Ç–æ–π –ø–ª–æ—â–∞–¥–∫–µ. –ê–¥—Ä–µ—Å –∏ —Ä–∞—Å–ø–∏—Å–∞–Ω–∏–µ —Å–æ–≥–ª–∞—Å—É–µ–º –ø—Ä–∏ –∑–∞–ø–∏—Å–∏.</p>
          </details>
        </div>
      </section>

      {/* CTA */}
      <section id="cta" className="mx-auto max-w-7xl px-4 py-16">
        <div className="relative overflow-hidden rounded-3xl border border-neutral-200 bg-white p-8 md:p-12 shadow">
          <div className="absolute -right-10 -top-10 h-40 w-40 rounded-full bg-neutral-900/5" />
          <div className="absolute -left-10 -bottom-10 h-40 w-40 rounded-full bg-neutral-900/5" />
          <h2 className="text-2xl md:text-3xl font-bold">–ì–æ—Ç–æ–≤—ã –Ω–∞—á–∞—Ç—å?</h2>
          <p className="mt-2 text-neutral-700 max-w-2xl">
            –û—Å—Ç–∞–≤—å—Ç–µ –∑–∞—è–≤–∫—É ‚Äî –ø–æ–¥–±–µ—Ä—ë–º –∫—É—Ä—Å, –≥—Ä–∞—Ñ–∏–∫ –∏ –∏–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–∞ –ø–æ–¥ –≤–∞—à–∏ —Ü–µ–ª–∏ –∏ –æ–ø—ã—Ç. –ò–ª–∏ –Ω–∞–ø–∏—à–∏—Ç–µ –Ω–∞–º –≤ WhatsApp/Telegram.
          </p>

          <form className="mt-6 grid md:grid-cols-3 gap-3">
            <input type="text" placeholder="–í–∞—à–µ –∏–º—è" className="w-full rounded-xl border border-neutral-200 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-neutral-900" />
            <input type="tel" placeholder="–¢–µ–ª–µ—Ñ–æ–Ω" className="w-full rounded-xl border border-neutral-200 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-neutral-900" />
            <select className="w-full rounded-xl border border-neutral-200 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-neutral-900">
              {courses.map((c, i) => (
                <option key={i} value={c.title}>{c.title}</option>
              ))}
            </select>
            <textarea placeholder="–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π / —É–¥–æ–±–Ω–æ–µ –≤—Ä–µ–º—è –∑–≤–æ–Ω–∫–∞" className="md:col-span-3 min-h-[100px] rounded-xl border border-neutral-200 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-neutral-900" />
            <div className="md:col-span-3 flex flex-wrap gap-3">
              <button type="button" className="px-5 py-3 rounded-xl bg-neutral-900 text-white hover:opacity-90">–û—Å—Ç–∞–≤–∏—Ç—å –∑–∞—è–≤–∫—É</button>
              <a href={contacts.whatsapp} className="px-5 py-3 rounded-xl border border-neutral-200 hover:bg-neutral-50">–ù–∞–ø–∏—Å–∞—Ç—å –≤ WhatsApp</a>
              <a href={contacts.telegram} className="px-5 py-3 rounded-xl border border-neutral-200 hover:bg-neutral-50">–ù–∞–ø–∏—Å–∞—Ç—å –≤ Telegram</a>
            </div>
          </form>
        </div>
      </section>

      {/* –ü–æ–¥–≤–∞–ª */}
      <footer className="border-t border-neutral-200">
        <div className="mx-auto max-w-7xl px-4 py-8 text-sm text-neutral-600 flex flex-wrap items-center justify-between gap-4">
          <div>¬© {new Date().getFullYear()} –ú–æ—Ç–æ—à–∫–æ–ª–∞ –í–ª–∞–¥–∏–º–∏—Ä–∞ –ë–æ–≥–æ–≤–∞</div>
          <div className="flex items-center gap-4">
            <a href="#" className="hover:opacity-70">–ü–æ–ª–∏—Ç–∏–∫–∞ –∫–æ–Ω—Ñ–∏–¥–µ–Ω—Ü–∏–∞–ª—å–Ω–æ—Å—Ç–∏</a>
            <a href="#" className="hover:opacity-70">–ö–æ–Ω—Ç–∞–∫—Ç—ã</a>
          </div>
        </div>
      </footer>
    </div>
  );
}
